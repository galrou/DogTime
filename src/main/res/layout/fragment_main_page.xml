<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gal.dogtime.MainPageFragment"
    android:background="@drawable/pawbackground2"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="56dp">

        <ImageButton
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_width="160dp"
            android:scaleType="fitXY"
            android:layout_height="145dp"
            android:id="@+id/starts2"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="10dp"
            />

        <ImageButton
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_width="160dp"
            android:scaleType="fitXY"
            android:layout_height="145dp"
            android:id="@+id/starts3"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/start3"
            android:contentDescription="@string/app_name"
           android:layout_marginLeft="24dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="34dp">

        <ImageButton
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_width="280dp"
            android:scaleType="fitXY"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:id="@+id/starts4"
            android:src="@drawable/start4"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <ImageButton
            android:padding="0dp"
            android:layout_marginTop="65dp"
            android:paddingTop="0dp"
            android:layout_width="217dp"
            android:scaleType="fitXY"
            android:layout_height="90dp"
            android:id="@+id/starts5"
            android:src="@drawable/start5"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="10dp"
            />

        <ImageButton
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:layout_width="190dp"
            android:scaleType="fitXY"
            android:layout_height="154dp"
            android:id="@+id/starts6"
            android:background="@android:color/transparent"
            android:src="@drawable/start6"
            android:layout_weight="2"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>


</LinearLayout>
