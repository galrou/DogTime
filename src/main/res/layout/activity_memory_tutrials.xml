<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/pawbackground2"
    tools:context="com.example.gal.dogtime.MemoryTutrialsActivity">


       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="TUTORIALS"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40dp"
        android:textStyle="bold" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/paw"
        android:layout_marginLeft="5dp"
        android:text="  Turn over any two cards."
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/paw"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  If the two cards match,they  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"

        android:textSize="23dp"
        android:textStyle="bold"
        android:text="       won't turn back  "/>



    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:textColor="@color/colorPrimary"
    android:drawableLeft="@drawable/paw"
    android:layout_marginTop="15dp"
    android:textSize="23dp"
    android:textStyle="bold"
    android:text="  Every 0.5 seconds the selected "/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="       pair will turn back if they are "/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="       not match"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/paw"
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  Remember what was on each  "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="       card and where it was."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/paw"
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  Your mistakes will be counted "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/paw"
        android:layout_marginTop="15dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="  The game is over when all the  "/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="23dp"
        android:textStyle="bold"
        android:text="       cards have been matched."/>

</LinearLayout>
